/* cookerlis */
.cookerbox{
  width: 100%;
  margin-top: 50rpx;
  height:850rpx;
}
.cookerhead{
  width: 100%;
  height: 40px;
  background: linear-gradient(rgb(217, 220, 220) , rgb(211, 211, 216));
  margin-top: 1px;
  display: block;
}

.cookerhead image{
  width: 30px;
  height: 30px;
  position: absolute;
  margin-top: 5px;
}
.cookerhead-title1{
  font-size: large;
  position: absolute;
  margin-top: 6px;
  margin-left: 8%;
}
.cookerhead-tiele2{
  font-size: 14px;
  position: absolute;
  margin-top: 10px;
  margin-left: 28%;
  color: rgb(89, 87, 87);
}


.cookerlistbox{
  width: 100%;
  height: 370rpx;
  display: flex;/*表示这个盒子布局的方式为弹性盒子布局*/
}

.cookeritem{
  flex: 1;
  border: solid 1rpx #ccc; 
  margin:20rpx;
  border-radius:8rpx;
  overflow: hidden;/*超出容器的部分就隐藏*/
  box-shadow: 0 0 20rpx 2rpx rgb(0, 0, 0,0.3);
}

.cookeritem image
{
  width: 100%;
}

.cookeritem text{
  display: block;/*把行内元素转为块级元素 就可以对它设置宽高了*/
  width: 100%;
  text-align: center; /* 让文字在容器内居中 */
}


