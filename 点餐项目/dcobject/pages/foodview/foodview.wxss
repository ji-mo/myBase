/* 头部样式开始 */
.foodheaderbox{
  position: relative;
}
.foodheaderbox image{
width:300rpx;
height:302rpx;
margin: 30rpx;
}
.rightbox{
width:calc(100% - 360rpx); 
height: 300rpx;
background-color:#eee;
position: absolute;
right: 0;
top:30rpx;
}

.line1{
font-size: 45rpx;
font-weight: bold;
}
.line2{
color: #7F7F7F;
font-size:36rpx;
line-height: 60rpx;
}
.line3{
color: #F06755;
}

.btnhover{
opacity: 0.6;
background-color: #ff6600!important;
color: #fff;
}
.btnbox{
width: 240rpx;
height: 80rpx;
position: absolute;
right:10rpx;
bottom: 10rpx;
}
.btnbox view
{
width:78rpx;
height: 80rpx;
float: left;
text-align: center;
line-height:76rpx;
font-size: 45rpx;
}

.btnjian{
border-radius: 40rpx;
border: solid 1rpx #ccc;
background-color: #fff;
font-weight: bold;
}
.btnjia{
border-radius: 40rpx;
border: solid 1rpx #ccc;
font-weight: bold;
background-color: #FF6755;
color: #fff;
}

.fline{
position: relative;/*作为定位的参考*/
padding-left: 20rpx;
border-bottom: solid 1rpx #eee;
height: 75rpx;
line-height: 75rpx;
font-weight: bold;
}

.fline input{
position: absolute;
left:220rpx;
top: 0;
font-weight: lighter;
height: 75rpx;
line-height: 75rpx;
}


/* 头部样式结束 */

.descriptions{
margin: 20rpx;
line-height:60rpx;
}

/* 底部样式开始 */
.foodfooterbox{
position: fixed;
bottom: 0;
left: 0;
width: 100%;
height:100rpx;
border-top: solid 1rpx #eee;
line-height: 100rpx;
font-weight: bold;
}
.btnsaveorder{
background-color: #FF7256;
height: 100rpx;
width: 260rpx;
position: absolute;
right: 0;
top: 0;
text-align: center;
color: #fff;

}

/* 底部样式结束 */